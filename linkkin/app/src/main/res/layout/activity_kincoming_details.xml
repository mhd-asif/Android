<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/custom_toolbar"
        style="@style/custom_AppTheme.Toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:contentInsetStart="5dp"
        android:background="@color/bg_left_menu">

        <com.andexert.library.RippleView
            android:id="@+id/mRipple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_below="@+id/imageView2"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            ripple:rv_type="rectangle"
            ripple:rv_centered="true"
            ripple:rv_rippleDuration="100"
            ripple:rv_color="#ffffff">

            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="@dimen/actionBar_linkkin_icon_size"
                android:layout_height="@dimen/actionBar_linkkin_icon_size"
                android:layout_gravity="center_vertical"
                android:src="@drawable/back_new"
                android:tint="#fff"
                />

        </com.andexert.library.RippleView>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:visibility="gone"
            android:src="@drawable/ic_action_bar_linkin" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/mRipple"
            android:layout_toEndOf="@+id/mRipple"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tool_bar_title"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="Kinteract"
                android:textColor="#ffffff"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/txtTrainingNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Training No"
                android:textSize="11sp"
                android:textColor="#ffffff"/>

        </LinearLayout>


        <!--
        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="@dimen/actionBar_linkkin_icon_size"
            android:layout_height="@dimen/actionBar_linkkin_icon_size"
            android:layout_gravity="center_vertical"
            android:src="@drawable/back_new"
            android:tint="#fff"
            android:layout_below="@+id/imageView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:layout_centerVertical="true" />  -->


    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f4f4f4">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f4f4f4"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:orientation="vertical"
                    android:background="@android:color/transparent"
                    android:layout_margin="10dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingLeft="5dp">

                        <TextView
                            android:id="@+id/txtResource1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1.3"
                            android:text="Resource Person"
                            android:textColor="@color/primary_color_dark"
                            android:textSize="@dimen/kindividual_tag_text_size" />

                        <TextView
                            android:id="@+id/txtResource"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1.7"
                            android:text="Resource Person"
                            android:textColor="#666"
                            android:textSize="@dimen/kindividual_tag_value_text_size"
                            android:textStyle="bold" />
                    </LinearLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#D5D5D5" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingLeft="5dp">

                        <TextView
                            android:id="@+id/txtTarget1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1.3"
                            android:text="Target People"
                            android:textColor="@color/primary_color_dark"
                            android:textSize="@dimen/kindividual_tag_text_size" />

                        <TextView
                            android:id="@+id/txtTarget"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1.7"
                            android:text="Target People"
                            android:textColor="#666"
                            android:textSize="@dimen/kindividual_tag_value_text_size"
                            android:textStyle="bold" />
                    </LinearLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#D5D5D5" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
