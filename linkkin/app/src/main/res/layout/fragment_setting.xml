<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.asif.linkkin.left_menu_fragment.SettingFragment">

<!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView5">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E4E4E4"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_marginTop="27dp">


                <RelativeLayout
                    android:id="@+id/linearNotification"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="70dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Push Notification"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:id="@+id/txtPush"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="15dp"
                        android:layout_alignParentRight="true"
                        android:clickable="false"
                        android:layout_centerVertical="true">

                        <android.support.v7.widget.SwitchCompat
                            android:id="@+id/mSwitch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:thumb="@drawable/switch_compat_custom"
                            app:track="@drawable/switch_compat_custom_track"
                            />

                    </RelativeLayout>


                </RelativeLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:id="@+id/textView53"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#C1C1C1"/>


                <com.andexert.library.RippleView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="#00000000"
                    ripple:rv_type="rectangle"
                    app:rv_rippleDuration="100"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/linearProfile"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="1">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".92"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="15dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="Edit Profile"
                                android:id="@+id/txtEditProfile" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="Default"
                                android:id="@+id/txtDefault"
                                android:textColor="#A3A3A3"/>

                        </LinearLayout>

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".08"
                            android:layout_marginRight="15dp"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:id="@+id/imageView11"
                            android:src="@drawable/arrow_right"/>
                    </LinearLayout>

                </com.andexert.library.RippleView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:id="@+id/textView58"
                    android:visibility="gone"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#C1C1C1"/>

                <com.andexert.library.RippleView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="#00000000"
                    android:visibility="gone"
                    ripple:rv_type="rectangle"
                    app:rv_rippleDuration="100">

                    <LinearLayout
                        android:id="@+id/linearSymbol"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".92"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Symbol Identity"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="15dp"
                            android:id="@+id/textView59" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".08"
                            android:layout_marginRight="15dp"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:id="@+id/imageView10"
                            android:src="@drawable/arrow_right"/>
                    </LinearLayout>

                </com.andexert.library.RippleView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:id="@+id/textView52"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#C1C1C1"
                    android:visibility="gone" />

                <!--  start -->

                <com.andexert.library.RippleView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="#00000000"
                    ripple:rv_type="rectangle"
                    app:rv_rippleDuration="100">

                    <LinearLayout
                        android:id="@+id/linearChangePIN"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".92"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Change PIN"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="15dp"
                            android:id="@+id/txtChangePIN" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".08"
                            android:layout_marginRight="15dp"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:id="@+id/arrowChangePIN"
                            android:src="@drawable/arrow_right"/>
                    </LinearLayout>

                </com.andexert.library.RippleView>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:id="@+id/textViewBlankPIN"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#C1C1C1"/>

                <!--  -->

                <com.andexert.library.RippleView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="#00000000"
                    ripple:rv_type="rectangle"
                    app:rv_rippleDuration="100">

                    <LinearLayout
                        android:id="@+id/linearLogout"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".92"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Logout"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="15dp"
                            android:id="@+id/txtLogout" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".08"
                            android:layout_marginRight="15dp"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:id="@+id/imageView9"
                            android:src="@drawable/arrow_right"/>
                    </LinearLayout>

                </com.andexert.library.RippleView>



            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/txtVersion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:layout_gravity="bottom"
        android:textColor="#004C4D"
        android:gravity="right"
        android:text="Version Name"/>

</FrameLayout>
