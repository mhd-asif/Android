<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    tools:context="com.bscheme.linkkin.left_menu_fragment.ContainerFragment">

    <!-- TODO: Update blank fragment layout -->


    <RelativeLayout
        android:id="@+id/custom_toolbar"
        style="@style/custom_AppTheme.Toolbar"
        android:layout_width="match_parent"
        android:paddingLeft="5dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/bg_left_menu"
        android:elevation="4dp">

        <com.andexert.library.RippleView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            ripple:rv_type="rectangle"
            ripple:rv_centered="true"
            ripple:rv_rippleDuration="100"
            ripple:rv_color="#ffffff"
            android:id="@+id/view4">

            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="@dimen/actionBar_linkkin_icon_size"
                android:layout_height="@dimen/actionBar_linkkin_icon_size"
                android:layout_gravity="center_vertical"
                android:src="@drawable/back_new"
                android:tint="#fff" />
        </com.andexert.library.RippleView>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:visibility="gone"
            android:src="@drawable/ic_action_bar_linkin" />

        <TextView
            android:id="@+id/tool_bar_title"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Kinteract"
            android:textColor="#ffffff"
            android:textStyle="normal"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/view4"
            android:layout_toEndOf="@+id/view4" />


    </RelativeLayout>

    <LinearLayout
        android:layout_below="@+id/custom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#f4f4f4"
        android:weightSum="1">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".9"
            android:background="#FFFFFF"
            android:orientation="vertical">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:id="@+id/scrollView3" >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="true"
                    android:padding="15dp">

                    <Spinner
                        android:id="@+id/spinnerCategory"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:drawSelectorOnTop="true"
                        android:background="@drawable/border"
                        android:layout_marginBottom="15dp"
                        />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:weightSum="1">


                        <LinearLayout
                            android:id="@+id/linearDate"
                            android:orientation="horizontal"
                            android:layout_width="0dp"
                            android:layout_height="45dp"
                            android:layout_weight=".5"
                            android:layout_marginRight="7dp"
                            android:clickable="true"
                            android:background="@drawable/border">

                            <ImageView
                                android:layout_width="38dp"
                                android:layout_height="match_parent"
                                android:background="#2DB7BC"
                                android:src="@drawable/date"
                                android:padding="5dp"
                                android:id="@+id/imageView13" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="left|center_vertical"
                                android:padding="5dp"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="Tap to select date"
                                android:textColor="#2DB7BC"
                                android:textSize="10dp"
                                android:id="@+id/txtDate" />

                        </LinearLayout>

                        <Spinner
                            android:id="@+id/spinnerLocation"
                            android:layout_width="0dp"
                            android:layout_height="45dp"
                            android:layout_weight=".5"
                            android:drawSelectorOnTop="true"
                            android:background="@drawable/border"
                            android:layout_marginLeft="7dp"
                            />

                    </LinearLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp">

                        <EditText
                            android:id="@+id/edtTitle"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:imeOptions="actionNext"
                            android:singleLine="true"
                            android:layout_marginTop="7dp"
                            android:hint="Title"
                            android:paddingLeft="10dp"
                            android:background="@drawable/bg_edit_text"/>
                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:inputType="textMultiLine"
                            android:hint="Description"
                            android:ems="10"
                            android:id="@+id/edtDescription"
                            android:layout_marginTop="7dp"
                            android:paddingLeft="10dp"
                            android:background="@drawable/bg_edit_text"/>
                    </android.support.design.widget.TextInputLayout>

                    <LinearLayout
                        android:id="@+id/linearPhoto"
                        android:clickable="true"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/border_black">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/camera_50"
                            android:padding="8dp"
                            android:id="@+id/imgPhoto" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="left|center_vertical"
                            android:padding="2dp"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Tap to add photo"
                            android:id="@+id/txtPhoto" />

                    </LinearLayout>

                    <!--
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="15dp"
                                        android:id="@+id/txtBlank"/>   -->


                </LinearLayout>

            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".1"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <com.andexert.library.RippleView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:ripple="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    ripple:rv_type="rectangle"
                    ripple:rv_rippleDuration="100">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="SUBMIT"
                        android:textStyle="bold"
                        android:background="#2DB7BC"
                        android:textSize="19sp"
                        android:textColor="#FFFFFF"
                        android:id="@+id/btnSubmit" />

                </com.andexert.library.RippleView>


            </LinearLayout>



        </LinearLayout>



    </LinearLayout>



</RelativeLayout>
