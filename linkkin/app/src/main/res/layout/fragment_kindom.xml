<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:id="@+id/scrollRoot">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#fff">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgBanner"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentTop="true"
                android:scaleType="fitXY" />

            <RelativeLayout
                android:id="@+id/relativeBanner"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentTop="true">

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_kindom_logo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/imgBanner"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="-50dp" />

            <RelativeLayout
                android:id="@+id/relativeLogo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/imgBanner"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="-50dp">

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgBanner"
                android:layout_marginLeft="5dp"
                android:layout_toEndOf="@+id/iv_kindom_logo"
                android:layout_toRightOf="@+id/iv_kindom_logo"
                android:padding="2dp"
                android:singleLine="true"
                android:text="Title"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/primary_color_dark"
                android:textStyle="bold"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/iv_kindom_logo"
                android:orientation="vertical"
                android:padding="10dp">

                <RelativeLayout
                    android:id="@+id/relativeDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp">

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_short_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill"
                    android:text="Short desc"
                    android:visibility="gone"
                    android:textColor="#a4a4a4"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/exp_view_about_us"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="#eeeeee"
                    android:padding="10dp"
                    android:text="About us"
                    android:textColor="@color/primary_color"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/about_us_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:padding="2dp"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:text="New Text"
                    android:id="@+id/textView"
                    android:background="#77959595" />

                <TextView
                    android:id="@+id/exp_view_business"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#eeeeee"
                    android:padding="10dp"
                    android:text="Business"
                    android:textColor="@color/primary_color"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/business_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="2dp"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:text="New Text"
                    android:id="@+id/textView5"
                    android:background="#77959595"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/exp_view_industries"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#eeeeee"
                    android:visibility="gone"
                    android:padding="10dp"
                    android:text="Industries"
                    android:textColor="@color/primary_color"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/industries_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#77959595"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/exp_view_statistics"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#eeeeee"
                    android:padding="10dp"
                    android:text="Statistics"
                    android:textColor="@color/primary_color"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/statistics_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="2dp"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#77959595"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/exp_view_contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#eeeeee"
                    android:padding="10dp"
                    android:text="Contact us"
                    android:textColor="@color/primary_color"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:visibility="gone" />
                <RelativeLayout
                    android:id="@+id/contact_us_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:visibility="gone"
                    android:minHeight="50dp" />

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</ScrollView>