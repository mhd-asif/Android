<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="custom_AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- ...and here we setting appcompatâ€™s color theming attrs -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_color_dark</item>
        <!-- colorAccent is used as the default value for colorControlActivated
                 which is used to tint widgets -->
        <item name="colorAccent">@color/accent</item>

    </style>

    <style name="AppTheme_Linkkin" parent="Theme.Linkkin"></style>

    <style name="Theme.Linkkin" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimaryDark">@color/primary_color_dark</item>
        <item name="android:colorPrimary">@color/primary_color</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:colorAccent">@color/accent</item>

    </style>

    <style name="custom_AppTheme.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/primary_color</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:windowNoTitle">true</item>
        <item name="popupTheme">@style/AppTheme.ActionBar.Popup</item>
    </style>
    <!-- Overflow drop down style -->
    <style name="AppTheme.ActionBar.Popup" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="android:background">@color/primary_color</item>
    </style>

</resources>